{
  "name": "kavins-risco-control-desktop",
  "version": "1.0.2",
  "description": "Sistema de Controle de Risco Kavin's",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "build": "vite build",
    "dist": "npm run build && electron-builder"
  },
  "keywords": [],
  "author": "Kavin's",
  "license": "ISC",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.4"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "recharts": "^2.12.2",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.8.2"
  },
  "build": {
    "appId": "com.kavins.riscocontrol",
    "productName": "Kavins Risco Control",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "index.js",
      "server.js",
      "package.json",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Kavins Risco Control"
    },
    "asar": true
  }
}